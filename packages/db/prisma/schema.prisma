// This is your Prisma schema file,
// learn more about it in the docs  https //pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Post {
    id      String @id @default(cuid())
    title   String
    content String
}
model Session {
    id          String @id @default(cuid())
    createdAt DateTime @default(now())
    name String        @default("NO_NAME")
    userId String
    gyroT Float[]
    gyroX Float[]
    gyroY Float[]
    gyroZ Float[]
    accelerationT Float[]
    accelerationX Float[]
    accelerationY Float[]
    accelerationZ Float[]
}

model Move {
  id          String   @id @default(cuid())
  createdAt       DateTime @default(now())
  userId      String
  name        String
  recordings  MoveRecording[]
}
model MoveRecording {
    id              String   @id @default(cuid())
    move            Move     @relation(fields: [moveId], references: [id])
    moveId          String
    createdAt       DateTime @default(now())
    tags            String[]
    quality         Float
    userId          String
    gyroT           Float[]
    gyroX           Float[]
    gyroY           Float[]
    gyroZ           Float[]
    accelerationT   Float[]
    accelerationX   Float[]
    accelerationY   Float[]
    accelerationZ   Float[]
}
